<div class="mx-5 mt-5">
  <h2 class="mb-5">Add a new task to your list.</h2>

    <%= form_with model: @task do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :details %>
      <%= f.text_field :details %>

      <%# <%= f.label :completed %>
      <%# <%= f.check_box :completed %>

      <%= f.submit "Add to list" %>
    <% end %>

    <button type="button" class="btn btn-light mt-5"> <%= link_to "Go back to index", home_task_path  %> </button>
</div>
