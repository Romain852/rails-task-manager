<div class="container">
  <div class="mt-3 pt-5">
    <h1>My Tasks</h1>

    <ul class="form-check bg-light">
      <% @tasks.each do |task| %>
      <input class="form-check-input" type="checkbox" value="<% task.completed %>" id="">
      <label class="form-check-label" for="flexCheckDefault">
      <ol> <%= link_to task.title, task_path(task) %></ol>
      <% end %>
      </label>
    </ul>

    <p class="mt-5
  "><%= link_to "(+) Add a task", new_task_path %></p>
  </div>
</div>
